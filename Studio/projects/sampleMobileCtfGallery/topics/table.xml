<?xml version="1.0"?>
<topic>
	<name>table</name>
	<title>Table</title>
	<sample>
		<title>Simple table</title>
		<description>
			<p>This sample demonstrates the usage of nested iterations in a table.</p>
		</description>
		<source>
			<script language="JavaScript">
				function formatCountry(data) {
					return data.toUpperCase();
				}
			</script>
			<button data-c8o-call=".getCountries" data-c8o-variables='{ "__user_reference": "table" }'>Get countries</button>
			<div data-c8o-listen=".getCountries" data-c8o-listen-condition='document[userReference="table"]'>
			   <table border="1">
			      <tbody data-c8o-each="country">
			         <tr>
			            <td colspan="10" align="center"><b>__{ "attr": "name", "formatter": "formatCountry" }__</b></td>
			         </tr>
			         <tr data-c8o-each="city">
			            <td>__{ "attr": "name" }__</td>
			         </tr>
			      </tbody>
			   </table>
			</div>
		</source>
	</sample>
	<sample>
		<title>Multi dimensional list</title>
		<description>
			<p>This sample demonstrates the usage of nested iterations in a multi dimensional list.</p>
		</description>
		<source>
			<button data-c8o-call=".getCountries" data-c8o-variables='{ "__user_reference": "list" }'>Get countries</button>
			<div data-c8o-listen=".getCountries" data-c8o-listen-condition='document[userReference="list"]'>
			   <ul data-c8o-each="country">
			      <li>
			      	<b>__{ "attr": "name", "formatter": "formatCountry" }__</b>
			      	<ul data-c8o-each="city">
			      		<li>__{ "attr": "name" }__</li>
			      	</ul>
			      </li>
			   </ul>
			</div>
		</source>
	</sample>
</topic>
