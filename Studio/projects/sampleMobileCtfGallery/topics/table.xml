<?xml version="1.0"?>
<topic>
	<name>table</name>
	<title>Table</title>
	<sample>
		<title>Table</title>
		<description>
			<p>This sample demonstrates the usage of nested iterations.</p>
		</description>
		<source>
			<button data-c8o-call=".getCountries">Get countries</button>
			<div data-c8o-listen=".getCountries" data-c8o-ref="labors">
			   <table>
			      <tbody data-c8o-each="country">
			         <tr>
			            <td colspan="10">__{ "attr": "name" }__</td>
			         </tr>
			         <tr data-c8o-each="city">
			            <td>__{ "attr": "name" }__</td>
			         </tr>
			      </tbody>
			   </table>
			</div>
		</source>
	</sample>
</topic>
