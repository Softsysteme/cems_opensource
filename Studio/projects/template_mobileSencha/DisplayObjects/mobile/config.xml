<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"
	id="com.convertigo.mobile.template" version="1.0.0">

	<name>Convertigo Mobile Template</name>

	<description>Template for Mobile Project</description>

	<author href="http://www.convertigo.com" email="sales@convertigo.com">Convertigo
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="iOS" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets" />
	</gap:platforms>

	<icon src="img/36x36.png" gap:role="default" />
	<icon src="img/48x48.png" width="48" height="48" />
	<icon src="img/57x57.png" width="57" height="57" />
	<icon src="img/72x72.png" width="72" height="72" />
	<icon src="img/36x36.png" width="36" height="36" />
	
	<gap:splash src="img/tabletStartup768x1024.png" width="768" height="1024" />
	<gap:splash src="img/tabletStartup1024x768.png" width="1024" height="768" />
	<gap:splash src="img/phoneStartup320x480.png" width="320" height="480" />
	<gap:splash src="img/phoneStartup480x320.png" width="480" height="320" />
	<gap:splash src="img/phoneStartup640x960.png" width="640" height="960" />
	<gap:splash src="img/phoneStartup960x640.png" width="960" height="640" />
<!-- 
	<feature name="http://api.phonegap.com/1.0/camera" />
	<feature name="http://api.phonegap.com/1.0/contacts" />
	<feature name="http://api.phonegap.com/1.0/geolocation" />
	<feature name="http://api.phonegap.com/1.0/media" />
	<feature name="http://api.phonegap.com/1.0/notification" />
 -->	
	
	<feature name="http://api.phonegap.com/1.0/network" />
	<feature name="http://api.phonegap.com/1.0/file" />
	
	<feature id="blackberry.system" required="true" version="1.0.0.0" />
	<feature id="phonegap" required="true" version="0.9.4" />
	<feature id="blackberry.find" required="true" version="1.0.0.0" />
	<feature id="blackberry.identity" required="true" version="1.0.0.0" />
	<feature id="blackberry.pim.Address" required="true" version="1.0.0.0" />
	<feature id="blackberry.pim.Contact" required="true" version="1.0.0.0" />
	<feature id="blackberry.io.file" required="true" version="1.0.0.0" />
	<feature id="blackberry.utils" required="true" version="1.0.0.0" />
	<feature id="blackberry.io.dir" required="true" version="1.0.0.0" />
	<feature id="blackberry.app" required="true" version="1.0.0.0" />
	<feature id="blackberry.app.event" required="true" version="1.0.0.0" />

	<!--
		Expose access to all URIs, including the file and http protocols
	-->
	<access subdomains="true" origin="*" />
	<access subdomains="true" origin="file:///store/home" />
	<access subdomains="true" origin="file:///SDCard" />

	<content src="index.html" />

</widget>
